extends layout

block content
  body
    .w3-container.w3-teal
      h1 Input task
              
        form.w3-container(method="POST")
          label.w3-text-teal Nome
          input.w3-input.w3-round(type="text" name="_id")
          input.w3-input.w3-border.w3-light-grey(name="nome" type="text" value="")
                
          label.w3-text-teal Task Description
          input.w3-input.w3-border.w3-light-grey(name="TaskDescription" type="text" value="")

          label.w3-text-teal Choose the date limit to do the task
          input.w3-input.w3-border.w3-light-grey(type='date', name='DateTask', value='') 
                    
          button.w3-btn.w3-blue.w3-mb-2(name="Done" value="0" type="submit")

        header.w3-container.w3-teal
          h3 Task List 
              
        .w3-col.w3-container.m6.l6
          h4 Tasks to Do:
            table.w3-table-all
              tr
                th Nome
                th Task Description
                th DateTask

              each t in task
                if t.Done == 0
                  tr
                    td = t.nome
                    td = t.TaskDescription
                    td = t.DateTask
                    td
                      a.button.w3-btn.w3-blue.w3-mb-2(href="/tasks/Done/"+t.id type="submit") Done
                      a.button.w3-btn.w3-blue.w3-mb-2(href="/tasks/Edit/"+t.id type="submit") Edit
                      a.button.w3-btn.w3-blue.w3-mb-2(href="/tasks/Delete/"+t.id type="submit") Delete
                        

        .w3-col.w3-container.m6.l6
          h4 Tasks Done:
            table.w3-table-all
              tr
                th Nome
                th Task Description 
                th DateTask
    

              each t in task
                if t.Done == 1
                  tr
                    td = t.nome
                    td = t.TaskDescription
                    td = t.DateTask
                    td
                      a.button.w3-btn.w3-blue.w3-mb-2(href="/tasks/Edit/" + t.id type="submit") Edit
                      a.button.w3-btn.w3-blue.w3-mb-2(href="/tasks/Delete/" + t.id type="submit") Delete

        footer.w3-container.w3-teal
          h5 Generated by RPCW2023 in #{d}
